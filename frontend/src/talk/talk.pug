
.centered
    h3 [[ctrl.gameName]]
.container
    .row
        .col-lg-4
            .panel.panel-default(style="background-color:#C4D9D4;")
                .panel-body
                    //img(src="../static/managers/img/manager.png" width=100 height=150)
                    .media
                        .media-left.media-middle
                            img(ng-src="../static/managers/img/[[ctrl.player.image_path]]" width=100 height=150)
                        .media-body
                            ul
                                li [[ctrl.player.name]]
                                li "[[ctrl.player.company]]"
                                li [[ctrl.player.position]]
                    .media
                        .media-left

                        .media-body
                            a(ng-link="['Game']").btn.btn-default.btn-lg.btn-block Закончить разговор
                    //p [[ctrl.next.question]]
        .col-lg-4
            .panel.panel-default(style="background-color:#C4D9D4;")
                .panel-body(ng-class="ctrl.checkColor()")
                    p Оставшееся время
                        .progress
                            .progress-bar.progress-bar-info(
                            role='progressbar'
                            aria-valuenow='[[ctrl.getTime()]]'
                            aria-valuemin='0'
                            aria-valuemax='100'
                            style='width: [[ctrl.getTime()]]%'
                            )
                                //| [[ctrl.time]]
                    //ol
                    //    li(ng-repeat='item in ctrl.history') -[[item]]
        .col-lg-4
            .panel.panel-default(style="background-color:#C4D9D4;")
                .panel-body
                    .media
                        .media-left.media-middle
                            img.media-object(
                            src="../static/managers/img/[[ctrl.npc.image_path]]"
                            width=100 height=150)
                        .media-body
                            ul
                                li [[ctrl.npc.name]]
                                li "[[ctrl.npc.company]]"
                                li [[ctrl.npc.position]]

    .row
        .col-lg-6
            .panel.panel-default(ng-show="!ctrl.notTheEnd()")
                .panel-body
                    p [[ctrl.player.current.text]]
            .panel.panel-default(
                ng-show="ctrl.notTheEnd()"
                style="background-color:#C4D9D4;"
                )
                  .panel-header

                  .panel-body
                    h5
                       b Выберите варианты ответа

                    .list-group
                      a(
                        href=""
                      ).list-group-item(
                          ng-repeat='element in ctrl.getPlayerQuestions()'
                          ng-click='ctrl.update(element.id)'
                          style="background-color:#F8FBF4;"
                          ) -&nbsp;[[element.text]]
        .col-lg-6
            .panel.panel-default(style="background-color:#C4D9D4;")
                .panel-body
                    p [[ctrl.getNpcAnswers().text]]
        .col-lg-12
            .panel.panel-default
                .panel-body
                    p История разговора
                    ol
                        li(ng-repeat='item in ctrl.getHistory()') -[[item.text]]