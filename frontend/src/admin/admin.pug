h1 Админка
p Всего [[$ctrl.users.length]] пользователей
table(class="table")
    tr 
        th Id
        th Username
        th Email
        th Phone
        th First Name
        th Last Name
        th Email is verified
        th Roles
        th Role To add
    tr(ng-repeat ="user in $ctrl.adminService.users ")
        td [[user.id]]
        td [[user.username]]
        td [[user.email]]
        td [[user.phone]]
        td [[user.first_name]]
        td [[user.last_name]]
        td [[user.emailVerified]]
        td 
            span(ng-repeat="role in user.roles") [[role]],
        td 
            span(ng-repeat="role in $ctrl.adminService.roles" ng-click="$ctrl.adminService.assignRole(role,user)") [[role.name]]





